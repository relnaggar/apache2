{
  "scripts": {    
    "css-compile": "sass --style compressed --source-map --embed-sources --no-error-css --load-path=node_modules src/scss/:dist/css/",
    "css-prefix": "postcss --replace dist/css/styles.css --use autoprefixer --map",
    "css": "npm-run-all css-compile css-prefix",
    "watch": "nodemon -e scss --watch src/scss -x \"npm run css\"",
    "build": "npm run css",
    "start": "npm run watch"
  },
  "devDependencies": {
    "sass": "^1.79.4",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "autoprefixer": "^10.4.20",
    "npm-run-all": "^4.1.5",
    "nodemon": "^3.1.7"
  }
}
